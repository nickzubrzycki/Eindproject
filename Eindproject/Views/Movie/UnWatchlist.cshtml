@model AllMoviesSeriesViewModel[]
@*


*@
@{
    int totalPages = (int)ViewData["TotalPages"];
    int counter = (int)ViewData["Counter"];
    int prevMovies = counter - 1;
    int nextMovies = counter + 1;

}


<h1> My Library</h1>



@if (!Model.Any())
{
    <p>There were no Movies or Tv-Serie. First you need to add some movies or series</p>
}

else
{
    <div class="card-deck">

        @foreach (var ms in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3">
                    <img class="card-img-top" src="@ms.poster_path" alt="Card image cap">
                    <div class="card-body text-center">
                        <h5 class="card-title">@ms.title</h5>
                        <p class="card-text">@ms.overview</p>
                    </div>
                    <div class="card-footer text-center">
                        <a href="#!" class="btn btn-primary">See Movie</a>
                    </div>

                </div>
            </div>



        }

    </div>


    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" asp-controller="movie" asp-action="UnWatchlist" asp-route-counter="@prevMovies">Previous </a></li>
            @for (int i = 0; i < totalPages; i++)
            {
                <li class="page-item"><a class="page-link" asp-controller="movie" asp-action="UnWatchlist" asp-route-counter="@i">@i</a></li>
            }
            <li class="page-item"><a class="page-link" asp-controller="movie" asp-action="UnWatchlist" asp-route-counter="@nextMovies">Next </a></li>
        </ul>
    </nav>


    <span> - </span>

    <a asp-controller="movie" asp-action="SeeAllMovies">See All Movies</a>

}


